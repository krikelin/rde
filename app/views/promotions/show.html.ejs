<div class="hero-unit">
  <h2 class="name"><%= promotion.name %></h2>
  <%- linkTo('Edit this promotion', editPromotionPath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Promotion Properties</h2>
<% for(var i in promotion) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= promotion[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>